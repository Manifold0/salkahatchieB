<h1 class="text-muted">Covenant Forms</h1>

<nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>

    </div><!-- /.navbar-collapse -->
</nav>

<div class="container">
    <div class="row">
        <div class=".col-md-3">
            <table class = "table table-striped table-condensed">
                <thead>
                <tr>
                    <th>User</th>
                    <th>Policy</th>
                    <th>Two adult</th>
                    <th>Training</th>
                    <th>Report abuse</th>
                    <th>Child abuse</th>
                    <th>Agree to covenant</th>
                    <th>User signature</th>
                    <th>Signature date</th>
                    <th>Printed date</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                <% @covenant_forms.each do |covenant_form| %>
                    <tr>
                        <td><%= covenant_form.user.full_name %></td>
                        <td><%= covenant_form.policy %></td>
                        <td><%= covenant_form.two_adult %></td>
                        <td><%= covenant_form.training %></td>
                        <td><%= covenant_form.report_abuse %></td>
                        <td><%= covenant_form.child_abuse %></td>
                        <td><%= covenant_form.agree_to_covenant %></td>
                        <td><%= covenant_form.user_signature %></td>
                        <td><%= covenant_form.signature_date %></td>
                        <td><%= covenant_form.printed_date %></td>

                        <% if can? :read, covenant_form %>
                            <td><%= link_to 'Show', covenant_form %></td>
                        <% end %>
                        <% if can? :update, covenant_form %>
                            <td><%= link_to 'Edit', edit_covenant_form_path(covenant_form) %></td>
                        <% end %>
                        <% if can? :destroy, covenant_form %>
                            <td><%= link_to 'Destroy', covenant_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                    </tr>
                <% end %>
                </tbody>
            </table>

            <br>

            <% if can? :create, CovenantForm %>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <%= link_to 'New Covenant form', new_covenant_form_path, :class => "btn btn-default col-md-12", style:"height:40px" %>
                    </div>
                </div>
            <% end %>
            <br>
            <% if current_user.is_admin? %>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <%= link_to 'Back', forms_path, :class => "btn btn-default col-md-12", style:"height:40px" %>
                    </div>
                </div>
            <% end %>


        </div>
    </div>
</div>


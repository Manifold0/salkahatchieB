<h1 class="text-muted">Users List</h1>

<nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>

    </div><!-- /.navbar-collapse -->
</nav>

<div class="container">
    <div class="row">
        <div class=".col-md-3">
            <div class="row">
                <div class="col-xs-1">
                    <p></p>
                </div>
                <div class="col-xs-1">
                    <p></p>
                </div>
                <div class="col-xs-1">
                    <b>XXXL</b>
                </div>
                <div class="col-xs-1">
                    <b>XXL</b>
                </div>
                <div class="col-xs-1">
                    <b>XL</b>
                </div>
                <div class="col-xs-1">
                    <b>L</b>
                </div>
                <div class="col-xs-1">
                    <b>M</b>
                </div>
                <div class="col-xs-1">
                    <b>S</b>
                </div>
                <div class="col-xs-1">
                    <b>XS</b>
                </div>
                <div class="col-xs-1">
                    <b>Unknown</b>
                </div>
            </div>
            <div class="row" style="border-top:1px solid #CCC;">
                <div class="col-xs-1">
                    <p></p>
                </div>
                <div class="col-xs-1">
                    <p></p>
                </div>
                <div class="col-xs-1">
                    <p><%= @total_xxxl %></p>
                </div>
                <div class="col-xs-1">
                    <p><%= @total_xxl %></p>
                </div>
                <div class="col-xs-1">
                    <p><%= @total_xl %></p>
                </div>
                <div class="col-xs-1">
                    <p><%= @total_l %></p>
                </div>
                <div class="col-xs-1">
                    <p><%= @total_m %></p>
                </div>
                <div class="col-xs-1">
                    <p><%= @total_s %></p>
                </div>
                <div class="col-xs-1">
                    <p><%= @total_xs %></p>
                </div>
                <div class="col-xs-1">
                    <p><%= @total_unknown %></p>
                </div>
            </div>
            
            <table class="table table-striped table-condensed">


                <thead>
                <tr>
                    <th>Name</th>
                    <th>T-Shirt Size</th>
                    <th><%=@total_xxxl%> Large, <%=@total_medium%> Medium, <%=@total_small%> Small</th>
                </tr>
                </thead>

                <tbody>
                <% @users.each do |user| %>
                    <% if can? :read, user %>
                        <tr>
                            <td><%= user.full_name %></td>
                            <td><%= user.tshirt_size %></td>
                            <td><%= link_to 'Edit', edit_user_path(user), class: 'hidden-print'%></td>
                        </tr>
                    <% end %>
                <% end %>
                </tbody>
            </table>

            <br>

        </div>
    </div>
</div>
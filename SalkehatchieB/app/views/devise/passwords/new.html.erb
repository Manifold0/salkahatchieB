<div class="form">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Forgot your password?</h2>
                    </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form">
                        <fieldset>
                            <div class="form-group">


                                <%= form_for(resource, :as => resource_name, :url => user_password_path(resource_name), :html => { :method => :post }) do |f| %>

                                 <%= devise_error_messages! %>

                                     <div><%= f.email_field :email, :autofocus => true, placeholder: "Email address", class:"form-control",style:"padding:4px" %><br />
                                     </div>

  <div><%= f.submit "Send reset password instructions", :class => "btn btn-default", style:"height:40px", style:"width:255px" %></div>
<% end %>

<%= render "devise/shared/links" %>

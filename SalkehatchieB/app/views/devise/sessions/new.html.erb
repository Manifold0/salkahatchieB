<div class="form">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Sign In</h2>
                </div>

                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form">

                        <fieldset>
                            <div class="form-group">
                                <%= form_for(resource, :as => resource_name, :url => new_user_session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

                                    <div>
                                        <%=f.email_field :email, autofocus: true, placeholder: "Email address", class:"form-control", style:"padding:4px" %><br />
                                    </div>

                                    <div>
                                        <%= f.password_field :password, placeholder: "Password", class:"form-control", style:"padding:4px" %> <br />
                                    </div>


                                    <% if devise_mapping.rememberable? -%>
                                        <div class="row">
                                            <div class= "col-md-8 col-md-offset-1">
                                                <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                                            </div>
                                        </div>
                                    <% end -%>

                                    <div class="row">
                                        <div class="col-md-4 col-md-offset-1">
                                            <%= f.submit "Sign in", :class => "btn btn-default", style:"height:40px", style:"width:210px" %>
                                        </div>
                                    </div>

                                <% end %>



                                <%= render "devise/shared/links" %>
                            </div>
                        </fieldset>
                        </form>
                      </div>
                </div>
            </div>
        </div>
    </div>


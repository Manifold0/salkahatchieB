<div class="form">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Sign Up</h2>
                </div>
                <div class="panel-body">

                            <div class="form-group">


                               <%= form_for(resource, :as => resource_name, :url => user_registration_path) do |f| %>
                               <%= devise_error_messages! %>


                                    <div><%=f.email_field :email, autofocus: true, placeholder: "Email address", class:"form-control",style:"padding:4px" %><br />
                                    </div>

                                    <div>
                                        <%= f.password_field :password, placeholder: "Password", class:"form-control", style:"padding:4px" %> <br />
                                    </div>

                                    <div>
                                        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class:"form-control", style:"padding:4px" %><br />
                                    </div>


                                    <div class="row">
                                        <div class="col-md-4 col-md-offset-1">
                                            <%= f.submit "Sign up", :class => "btn btn-default", style:"height:40px", style:"width:210px" %>
                                        </div>
                                    </div>

                                <% end %>

<%= render "devise/shared/links" %>
                                </div>

                        </div>
                </div>
            </div>
        </div>
    </div>



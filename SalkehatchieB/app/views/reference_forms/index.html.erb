<h1 class="text-muted">Reference Forms</h1>

<nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>

    </div><!-- /.navbar-collapse -->
</nav>

<div class="container">
    <div class="row">
        <div class=".col-md-3">
            <table class = "table table-striped table-condensed">
                <thead>
                <tr>
                    <th>User</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Relationship</th>
                    <th>Approval status</th>
                    <th>Reviewed by camp director</th>
                    <th>Printed date</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                <% @reference_forms.each do |reference_form| %>
                    <tr>
                        <td><%= reference_form.user.full_name %></td>
                        <td><%= reference_form.name %></td>
                        <td><%= reference_form.email %></td>
                        <td><%= reference_form.relationship %></td>
                        <td><%= reference_form.approval_status %></td>
                        <td><%= reference_form.reviewed_by_camp_director %></td>
                        <td><%= reference_form.printed_date %></td>
                        <td><%= link_to 'Show', reference_form %></td>
                        <td><%= link_to 'Edit', edit_reference_form_path(reference_form) %></td>
                        <td><%= link_to 'Destroy', reference_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
            <br>

            <% if can? :create, Questionnaire %>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <%= link_to 'New Reference Form', new_reference_form_path, :class => "btn btn-default col-md-12", style:"height:40px" %>
                    </div>
                </div>
            <% end %>
            <br>
            <% if current_user.is_admin? %>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <%= link_to 'Back', forms_path, :class => "btn btn-default col-md-12", style:"height:40px" %>
                    </div>
                </div>
            <% end %>


        </div>
    </div>
</div>


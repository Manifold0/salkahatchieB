<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.permission_level %></td>
        <% if can? :read, user %>
            <td><%= link_to 'Show', user %></td>
        <% end %>

        <% if can? :update, user %>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>

        <% if can? :destroy, user %>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1 class="text-muted">Users List</h1>

<nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="margin-top:12px;">

            <%= form_for User.new, class: 'navbar-form navbar-right', url: users_search_url do |f| %>
        <div class="form-group col-md-2 col-md-offset-7">
  <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
  </div><div class="form-group col-md-2">
  <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
    </div>
  
  <div class="form-group col-md-1">
  <%= f.submit "Search", class: 'form-control' %>
  </div>
<%- end %>


    </div><!-- /.navbar-collapse -->
</nav>

<div class="container">
<table class="table table-striped table-bordered">


  <thead>
    <tr>
      <th><h4 class="text-muted"> Personal Information </h4></th>
        <th><h4 class="text-muted"> </h4></th>
      <th><h4 class="text-muted">Camp Related</h4></th>
      <th><h4 class="text-muted">Form/Background Check Status</h4></th>
      <th><h4 class="text-muted">Edit</h4></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><strong>Full Name: </strong><%= user.first_name %> <%= user.last_name %></td>
          <td><strong>Gender: </strong><%= user.gender%></td>
          <td><strong>Permission Level: </strong><%= user.permission_level %></td>
          <td><strong>Covenant Form: </strong><%= user.covenant_form_up_to_date %></td>
          <td><%= link_to 'Show', user, class: 'hidden-print' %></td>
          </tr>
      <tr>
          <td><strong>Email: </strong><%= user.email %></td>
          <td><strong>Date of Birth: </strong><%= user.date_of_birth %></td>
           <td><strong>Balance: </strong><%= user.current_balance %></td>
           <td><strong>Background Check: </strong><% if user.background_check_valid? %><%= user.background_check_date %><% elsif user.background_check
               %>Expired<% else %>No<% end %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'hidden-print'%></td>
          </tr>
      <tr>
          <td><strong>Address: </strong><%=user.address_line1 %></td>
          <td><strong>Telephone: </strong><%=user.phone_number %></td>
          <td><strong>T-shirt size: </strong><%=user.tshirt_size %></td>
          <td><strong>Questionnaire: </strong><%= user.questionnaire_up_to_date %></td>
          <td><%= link_to 'Destroy', admin_user_delete_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'hidden-print' %></td>
           </tr>
      <tr>
            <td><%=user.address_line2 %></td>
          <td><strong>Service Provider: </strong><%=user.service_provider %></td>
          <td><strong>Church: </strong><%=user.church %></td>
            <td><strong>Reference Forms: </strong><%= user.reference_forms_up_to_date %></td>
          <td></td>
          </tr>
      <tr>
          <td><strong>City, State: </strong><%=user.city %> <%=user.state %></td>
          <td><strong>Gender:</strong></td>
          <td><strong>Church Pastor: </strong><%=user.church_pastor %></td>
            <td><strong>Medical Form: </strong><%= user.medical_form_up_to_date %></td>
             <td></td>
                        </tr>
      <tr>
           <td></td>
          <td></td>
              <td></td>
          <td></td>
          <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

                <div class="row">
                    <div class="col-md-8 col-md-offset-4">



<%= link_to 'New User', new_user_path, :class => "btn btn-default col-md-4 hidden-print", style:"height:40px" %>
</div>
                    </div>
            </div>
        </div>
    </div>



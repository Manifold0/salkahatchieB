<h1 class="text-muted">Users List</h1>

<nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>

    </div><!-- /.navbar-collapse -->
</nav>

<div class="container">
    <div class="row">
        <div class=".col-md-3">
            <table class="table table-striped table-condensed">


  <thead>
    <tr>
      <th>Permission Level</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Balance</th>
      <th>Covenant</th>
      <th>Background Check</th>
      <th>Questionnaire</th>
      <th>Reference Form</th>
      <th>Medical Form</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if can? :read, user %>
      <tr>
        <td><%= user.permission_level %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.current_balance %></td>
            <td><%= user.covenant_form_up_to_date %></td>
            <td><% if user.background_check_valid? %><%= user.background_check_date %><% elsif user.background_check
               %>Expired<% else %>No<% end %></td>
            <td><%= user.questionnaire_up_to_date %></td>
            <td><%= user.reference_forms_up_to_date %></td>
            <td><%= user.medical_form_up_to_date %></td>
            <td><%= link_to 'Show', user, class: 'hidden-print' %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: 'hidden-print'%></td>
            <td><%= link_to 'Destroy', admin_user_delete_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'hidden-print' %></td>

      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

                <div class="row">
                    <div class="col-md-8 col-md-offset-4">



<%= link_to 'New User', new_user_path, :class => "btn btn-default col-md-4 hidden-print", style:"height:40px" %>
</div>
                    </div>
            </div>
        </div>
    </div>


